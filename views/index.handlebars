<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找或新增餐廳</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..." aria-describedby="search-button" value={{keyword}} >
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
            <a href="/restaurants/new">
            <button class="btn btn-major" type="button">
              <i class="fas fa-solid fa-plus"></i>
            </button>
            </a>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>



<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    {{#each restaurants}}
    <div class="col-md-4">
      <a href="./restaurants/{{this._id}}" class="text-secondary">
        <div class="card mb-1">
          <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
          <div class="card-body p-3">
            <h6 class="card-title mb-1">{{this.name}}</h6>

            <div class="restaurant-category mb-1">
              <i class="fas fa-utensils pr-2"></i> {{this.category}}
            </div>

            <span class="badge rounded-pill bg-danger font-weight-normal">
              {{this.rating}}
              <i class="fas fa-star fa-xs"></i>
            </span>

          </div>
        </div>
      </a>
      <div class="d-flex justify-content-end mb-2 mt-0">
        <a class="mx-2" href="./restaurants/{{this._id}}/edit" method="POST">
        <button class="btn btn-major p-0" type="button">
        edit
        </button>
        </a>
        <a class="mx-2" href="./restaurants/{{this._id}}">
        <button class="btn btn-major p-0" type="button">
          detail
        </button>
        </a>
        <form action="/restaurants/{{ this._id }}/delete" method="POST" style="display: inline;">
          <button class="btn btn-major p-0" type="submit">delete</button>
        </form>
      </div>

    </div>
    {{/each}}
  </div>
</div>