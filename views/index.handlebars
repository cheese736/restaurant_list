<!-- search bar -->
<div class="container search-bar d-flex">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找或新增餐廳</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..." aria-describedby="search-button" value={{keyword}} >
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
            <a href="/restaurants/new">
            <button class="btn btn-major" type="button">
              <i class="fas fa-solid fa-plus"></i>
            </button>
            </a>
          </div>
        </div>
      </form>
    </div>
  </div>
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <h4 class="mb-2">選擇排序方式</h4>
      <div class="dropdown show">
        <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="drorpdown" aria-haspopup="true" aria-expanded="false">
          Dropdown link
        </a>

        <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
          <a class="dropdown-item" href="#">Action</a>
          <a class="dropdown-item" href="#">Another action</a>
          <a class="dropdown-item" href="#">Something else here</a>
        </div>
      </div>
    </div>
  </div>
</div>



<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    {{#each restaurants}}
    <div class="col-md-4">
      <a href="./restaurants/{{this._id}}" class="text-secondary">
        <div class="card mb-4">
          <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
          <div class="card-body p-1">
            <h6 class="card-title mb-1">{{this.name}}</h6>

            <div class="restaurant-category mb-1">
              <i class="fas fa-utensils pr-2"></i> {{this.category}}
            </div>

            <span class="badge rounded-pill bg-danger font-weight-normal">
              {{this.rating}}
              <i class="fas fa-star fa-xs"></i>
            </span>
            {{!-- buttons --}}
            <div class="d-flex justify-content-end my-0">
              <a class="mx-2" href="./restaurants/{{this._id}}/edit" method="POST">
                <button class="btn btn-major btn-sm " type="button">
                  Edit
                </button>
              </a>
              <a class="mx-2" href="./restaurants/{{this._id}}">
                <button class="btn btn-major btn-sm" type="button">
                  Detail
                </button>
              </a>
              <form action="/restaurants/{{ this._id }}?_method=DELETE" method="POST" style="display: inline;">
                <button class="btn btn-major btn-sm mx-2" type="submit">
                  Delete
                </button>
              </form>
            </div>
          </div>
        </div>
      </a>


    </div>
    {{/each}}
  </div>
</div>